<Alloy>
  <ListView defaultItemTemplate="row">
    <Templates>
      <ItemTemplate name="row" class="row">
        <View bindId="cell" class="cell">
          <ImageView bindId="img" class="image"/>
          <Label bindId="title" class="title"/>
          <Label bindId="summary" class="summary"/>
          <Label bindId="origin" class="origin"/>
          <Label bindId="state" class="state"/>
          <Label bindId="ago" class="ago"/>
        </View>
      </ItemTemplate>
    </Templates>
    <ListSection/>
  </ListView>
</Alloy>
